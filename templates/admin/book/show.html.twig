{% extends 'base.html.twig'%}
{% block title %}
	{{ book.title }}
{% endblock %}
{% block body %}
	<section class="py-5">
		<div class="container px-4 px-lg-5 my-5">
			<h1 class="mb-4 text-center">
				<strong>{{ book.title }}</strong>
			</h1>
			<div class="row gx-4 gx-lg-5 align-items-center">
				<div class="col-md-6">
					<img src="{{ asset('img/' ~ book.cover) }}" class="card-img-top img-fluid" alt="Couverture de {{ book.title }}">
				</div>

				<div class="col-md-6">
					<div class="card-body d-flex flex-column">
						<h5 class="card-title">
							<strong>{{ book.title }}</strong>
						</h5>
						<p class="text-muted">Identifiant:
							{{ book.id }}</p>
						<p>
							<strong>Pages:</strong>
							{{ book.pageNumber }}</p>
						<p>
							<strong>ISBN:</strong>
							{{ book.isbn }}</p>
						<p>
							<strong>Édité le:</strong>
							{{ book.editedAt|date('d M Y') }}</p>
						<p class="">
							<strong>Résumé:</strong>
							{{ book.plot }}</p>

						<p>
							<strong>Éditeur:</strong>
							{{ book.editor ? book.editor.name : 'Non renseigné' }}
						</p>

						{# Affichage de l'auteur #}
						<p>
							<strong>Auteur :</strong>
							{% if book.authors is not empty %}
								{% for author in book.authors %}
									{{ author.name }}
									{% if not loop.last %},
									{% endif %}
								{% endfor %}
							{% else %}
								Non renseigné
							{% endif %}
						</p>

						<p>
							<strong>Status:</strong>
							{{ book.status.value }}</p>

					</div>

					<a href="{{ path('app_admin_book_index') }}" class="btn btn-primary">Retour à la liste des livres</a>
				</section>

			{% endblock %}
